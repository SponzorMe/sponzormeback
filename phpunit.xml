<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="bootstrap/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>./tests/PostTest.php</directory><!--First Insert the data-->
            <directory>./tests/PatchTest.php</directory><!--Then Edit the data via PATCH-->
            <directory>./tests/PutTest.php</directory><!--Then Edit the data via PUT-->
            <directory>./tests/GetTest.php</directory><!--Then Get the data via PUT-->
            <directory>./tests/GetOneTest.php</directory><!--Then Get the data via-->
            <directory>./tests/DestroyTest.php</directory><!--Then Get the data via-->
            <directory>./tests/CustomTest.php</directory><!--Then the others custom tests-->
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="local"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
    </php>
</phpunit>
